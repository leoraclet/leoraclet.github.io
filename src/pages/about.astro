---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import Aside from "@components/Aside.astro";
import TableOfContents from "@components/TableOfContents.astro";
import { ABOUT } from "@consts";

const collection = await getCollection("about");
const about = await Promise.all(
  collection.map(async (item) => {
    const { Content, headings } = await item.render();
    return { ...item, Content, headings };
  })
);
---

<PageLayout title={ABOUT.TITLE} description={ABOUT.DESCRIPTION}>
  <TopLayout>
    <div class="animate">
      <h1 class="text-3xl font-semibold text-black dark:text-white mt-2">
        {ABOUT.TITLE}
      </h1>
      <div class="mt-1">
        {ABOUT.DESCRIPTION}
      </div>
      <Aside type="info">🏗️ Page under construction ... Work in progress</Aside>
    </div>
  </TopLayout>
  <BottomLayout>
    {
      about.map((entry) => (
        entry.headings.length > 0 && <TableOfContents headings={entry.headings} />
        <article class="animate prose dark:prose-invert">
          <entry.Content />
        </article>
      ))
    }
  </BottomLayout>
</PageLayout>
