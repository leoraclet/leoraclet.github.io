---
import { Icon } from "astro-icon/components";

interface Props {
  type: "tip" | "caution" | "danger" | "info";
}

const { type } = Astro.props as Props;

const icon = (() => {
  switch (type) {
    case "tip":
      return "tabler/bulb";
    case "caution":
      return "tabler/alert-triangle";
    case "danger":
      return "tabler/flame";
    case "info":
      return "tabler/info-circle";
  }
})();
---

<div
  class:list={[
    "aside prose-p:my-0 my-3 rounded-md border-l-4 px-4 py-3",
    {
      "prose-code:bg-green-400/20 border-green-400 bg-green-400/10 text-green-950":
        type === "tip",
    },
    {
      "prose-code:bg-yellow-400/20 border-yellow-400 bg-yellow-400/10 text-yellow-950":
        type === "caution",
    },
    {
      "prose-code:bg-red-400/20 border-red-400 bg-red-400/10 text-red-950":
        type === "danger",
    },
    {
      "prose-code:bg-sky-400/20 border-sky-400 bg-sky-400/10 text-sky-950":
        type === "info",
    },
  ]}
>
  <div class="flex items-center gap-2 pb-2">
    <Icon name={icon} class="h-7 w-7" aria-hidden="true" />
    <p class="text-sm font-bold">{type.toUpperCase()}</p>
  </div>
  <slot />
</div>
